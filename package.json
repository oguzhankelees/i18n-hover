{
	"name": "i18n-localization-preview",
	"displayName": "i18n Localization Preview",
	"publisher": "oguzhankeles",
	"description": "Preview i18n translation values on hover for t('key.path') without opening locale files.",
	"version": "0.0.2",
	"license": "MIT",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/oguzhankelees/i18n-hover"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "i18nHover.selectLocalesFolder",
				"title": "i18n Hover: Select Locales Folder"
			}
		],
		"configuration": {
			"title": "i18n Hover",
			"properties": {
				"i18nHover.localesPath": {
					"type": "string",
					"default": "locales",
					"description": "Path to translation files folder (relative to workspace root)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "1.75.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"typescript-eslint": "^8.54.0",
		"eslint": "^9.39.2",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
